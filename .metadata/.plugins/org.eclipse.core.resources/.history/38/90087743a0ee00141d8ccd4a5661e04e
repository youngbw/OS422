#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#include <time.h>

static const int size = 10;

int gen_rand(int num) {
	if (num == 0) {
		srand(time(NULL));
		return rand() % 10 + 1;
	} else {
		return num * 7 / 3 % 10 + 1;
	}


}

int multiplyRow(int row) {
	int col = 0;
	int num = 0;

	return num;
}

void loadMatrix(int matrix[][size]) {
	int col = 0;
	int row = 0;
	int prev = gen_rand(0);
	while (row < size) {
		col = 0;
		while (col < size) {
			matrix[row][col] = prev;
			prev = gen_rand(prev);
			printf("%d ", matrix[row][col]);
			col++;
		}
		row++;
		printf("\n");
	}
	printf("\n");
}


int main() {

	int row = 0;

	int matrix1[size][size];
	int matrix2[size][size];

//	int finalMatrix[size][size];
//	int finalMatrix2[size][size];

	loadMatrix(matrix1);
	loadMatrix(matrix2);


